@using EstacionamentoDatabase.Entidades
@model List<Veiculo>


<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estacionamento Top</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-50">

    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 py-6">
            <h1 class="text-3xl text-gray-900 text-center font-bold">Veiculos no Estacionamento</h1>
        </div>
    </header>

    <main class="max-w-4xl mx-auto px-4 py-8">
        <div class="flex flex-col sm:flex-row gap-4 mb-8 justify-center">
            <a asp-action="MarcarEntrada" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold">Marcar entrada</a>
            <a asp-action="MarcarSaida" class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg font-semibold">Marcar saída</a>
        </div>

        <form asp-action="BuscarVeiculoEstacionado" method="post">
            <input maxlength="7" name="placa" type="text" placeholder="Buscar por placa..." class=" w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500" />
        </form>

        <div class="bg-white rounded-lg shadow">
            <table class="w-full">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left font-semibold">Placa</th>
                        <th class="px-6 py-3 text-left font-semibold">Entrada</th>
                        <th class="px-6 py-3 text-left font-semibold">Saída</th>
                        <th class="px-6 py-3 text-left font-semibold">Tempo</th>
                        <th class="px-6 py-3 text-left font-semibold">Valor Cobrado</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @if (ViewBag.Mensagem != null && Model.Count() == 0)
                    {
                        <p class="text-red-500 font-semibold">@ViewBag.Mensagem</p>
                    }
                    else
                    {
                    @foreach (var Veiculo in Model){
                        <tr>
                            <td class="h-[50px]">
                                @Veiculo.placa
                            </td>
                            <td class="h-[50px]">
                                @Veiculo.data_hora_entrada
                            </td>
                        </tr>
                    }
                        
                    }
                </tbody>
            </table>
        </div>
        <div class="mt-6 text-center text-gray-600"></div>
    </main>
</body>
</html>